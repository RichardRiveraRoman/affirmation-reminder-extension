{
  "manifest_version": 3,
  "name": "Affirmation Reminder",
  "version": "1.0",
  "description": "Displays positive affirmations every 30 minutes.",
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_icon": "./icon.png",
    "default_popup": "./popup.html"
  }
}
